<%= simple_form_for [@teacher, @appointment] do |f| %>
<%= f.input :description %>
<%= f.input :categories, collection: @teacher.categories, input_html: { multiple: true }, include_hidden: false %>
<%= f.input :start_time %>
<%= f.input :end_time %>
<%= f.input :remote %>
<%= number_to_currency(@teacher.price) %>
<%= f.button :submit %>
<% end %>
