  <h1>Pages#home</h1>
<div class="teacher-calendar-show">
  <%= week_calendar(events: @appointments, end_attribute: :end_time) do |date, appointments| %>
    <% (@teacher.start_time.hour..@teacher.end_time.hour).each do |hour| %>
      <div class="teacher-slot">
      <% if @teacher[date.strftime("%A").downcase!.to_sym] %>
        <%= "#{hour}:00" %>
        <%= @appointments.find_by(start_time: date.to_datetime.change({hour: hour}))&.description %>
      <% else %>
        <%= "-" %>
      <% end %>
      </div>
    <% end %>
  <% end %>
</div>

  <div class="row">
    <% @teachers.each do |teacher| %>
      <%= teacher.user.first.name %>
      <%= link_to "Make appointment with this teacher", new_appointment_path %>
    <% end %>
  </div>
