<h1>Pages#home</h1>


<%= week_calendar(events: @appointments, end_attribute: :end_time) do |date, appointments| %>
  <% (@teacher.start_time.hour..@teacher.end_time.hour).each do |hour| %>
    <div class="teacher-slot">
      <%= hour %>
      <%= @appointments.find_by(start_time: date.to_datetime.change({hour: hour}))&.description %>
    </div>
  <% end %>

<% end %>
