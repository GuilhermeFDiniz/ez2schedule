
<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to calendar.url_for_previous_view, class:"text-decoration-none arrow" do %>
      <i class="fa-solid fa-circle-chevron-left"></i>
    <% end %>
      <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <%= link_to calendar.url_for_next_view, class:"text-decoration-none arrow" do %>
      <i class="fa-solid fa-circle-chevron-right"></i>
    <% end %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="p-3 mb-1 bg-black text-white">
          <div><%=  day.day %></div>
          <div><%= t('date.abbr_day_names')[day.wday] %></div>
          </th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
