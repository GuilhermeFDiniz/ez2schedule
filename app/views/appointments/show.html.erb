<div class='container'>
  <%# <div class="row"> %>
  <h2 class="page-title text-center">My Appointment<h2>
    <%# <div class="col-md-4"> %>
      <div class="card mb-3" style="width: 75rem;">
        <%= image_tag ('https://www.olivetreefilmes.com.br/wp-content/uploads/2021/05/Como-fazer-edicao-de-videos-para-Youtube-1.jpg'), class:'card-img-top'%>
        <div class="card-body">
          <h5 class="card-title"><%= @appointment.teacher.user.first_name %></h5>
          <p class="card-text"><%= @appointment.teacher.user.about %></p>
            <ul class="list-group list-group-flush">
            <% @appointment.teacher.categories.pluck(:name).each do |category| %>
              <li class="list-group-item"><%=category%></li>
            <% end %>
            <li class="list-group-item"><%= humanized_money_with_symbol(@appointment.teacher.price) %></li>

            <li class="list-group-item">
              <small>
                <% count = 0 %>
                <% 5.times do %>
                  <% if @appointment.rating > count %>
                    <i class="fas fa-star"></i>
                  <% else %>
                    <i class="far fa-star"></i>
                  <% end %>
                  <% count += 1 %>
                <% end %>
              </small>
              </li>
            <li class="list-group-item"><%=@appointment.review_content%></li>
            <li class="list-group-item"><%= @appointment.description %></li>
            <% @appointment.categories.each do |category|%>
              <li class="list-group-item"><%= category.name%></li>
            <%end%>
            <li class="list-group-item"><%= @appointment.start_time %></li>
            <li class="list-group-item"><%= @appointment.end_time %></li>
            <li class="list-group-item"><%= @appointment.remote %></li>
            </ul>
            <% if @appointment.user == current_user || @appointment.teacher.user == current_user%>
                <%= link_to appointment_videorooms_path(@appointment), data: { "turbo-method": :post }, class: 'btn-room' do %>
                  <span class='enter-room mt-2'><i class="fas fa-video" style='display:inline;'></i> | Enter Room</span>
                <% end %>
              <% end %>
          <% if policy(@appointment).edit? %>
            <%= link_to "Edit this @appointment", edit_appointment_path(@appointment), class:'btn btn-primary' %>
          <% end %>
           <%= button_to "Cancel this @appointment", @appointment, method: :delete if policy(@appointment).destroy? %>
           <%= link_to "Review this @appointment", review_appointment_path(@appointment), class:'btn btn-dark' %>
        </div>
      </div>
    <%# </div> %>
  </div>
<%# </div> %>
